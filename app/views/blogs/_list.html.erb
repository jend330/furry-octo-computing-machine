<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.description %></td>
        <td><%= time_ago_in_words(blog.created_at) %></td>
        <td><%= link_to 'Show', blog %></td>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>